<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center mx-auto">
            <div class="card-header">
                <h1>Login</h1>
            </div>
            <img src="/img/logo.png" class="rounded-circle mx-auto d-block m4 logo" alt="logo"></img>
             <div class="card-body">
                <form action="/users/signin" method="POST">
                <div class="form-group mb-3">
                    <input type="email" 
                           class="form-control" 
                           name="email"
                           placeholder="Correo Electronico"
                           autofocus="">
                </div>
                <div class="form-group mb-3">
                    <input type="password" 
                           class="form-control" 
                           name="password"
                           placeholder="Password"
                           autofocus="">
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-block btn-primary" autofocus="">Ingresar</button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>