<link rel="stylesheet" type="text/css" href="/css/main.css"> 
<!-- <div class="container"> -->
<div class="row">
    {{#each proveedores}}
    <div class="col-md-4">
        <div class="card text-dark gray border-info mb-3">
            <div class="card-header tituloproveedor"> 
                <h4 class="card-title justify-content-between align-items-center text-center text-white">
                    {{nombre}}
                </h4>
            </div>
            <div class="card-body text-center text-black"> 
                <p>Tel: {{telefono}}</p>
            </div>
            <div class="card-body text-center text-black"> 
                <p>{{direccion}}</p>
            </div>
            <div class="card-body text-center text-black"> 
                <p>C.P. {{codigo_postal}}</p>
            </div>
            <div class="card-body text-center">
                <a class="btn editarbutton" href="/proveedores/edit:{{_id}}"><i class="fas fa-edit m-2">Editar</i></a>
                <a class="btn btn-danger" href="/proveedores/delete:{{_id}}"><i class="fas fa-trash">Eliminar</i></a>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1 class="text-center">Hola {{usuario.nombre}}</h1>
            <p class="lead text-center">No hay proveedores en la base de datos.</p>
            <button class="btn btn-outline-success btn-block"><a href="/proveedores/add" 
            class="btn tituloproveedor text-white btn-block">Crear Nuevos Proveedores!</a></button>
        </div>
    </div>
    {{/each}}
</div>

