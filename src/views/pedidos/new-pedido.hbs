<link rel="stylesheet" type="text/css" href="/css/main.css"> 
<div class="col-md-4 mx-auto">
    <div class="card borde-success ">
        <div class="card-header titulopedido">
            <h3 class="text-center text-white">Nuevo Pedido</h3>
        </div>
        <div class="card-body">
            <form action="/pedidos/new-pedido" method="POST" enctype="multipart/form-data">
            <div class="form-group mb-3">
              <select name="producto"
                    class="form-control" 
                    autofocus="" 
                    required>
                <option>--Selecciona Producto--</option>
                {{#each arregloproduc}}
                <option>{{nombre}}</option>
                {{/each}}    
              </select>
            </div>
            <div class="form-group mb-3">
              <select name="proveedor"
                    class="form-control" 
                    autofocus="" 
                    required>
                <option>--Selecciona Proveedor--</option>
                {{#each arregloprovee}}
                <option>{{nombre}}</option> 
                {{/each}}    
              </select>
            </div>
            <div class="form-group mb-3">
                <input type="number" 
                    name="cantidad_de_piezas"
                    class="form-control" 
                    placeholder="Cantidad de piezas"
                    autofocus="" 
                    value="{{cantidad_de_piezas}}"
                    required>
            </div>
            <div class="form-group d-grid gap-2">
                <button class="btn btn-outline-success" type="submit">
                    Guardar
                </button>
            </div>
            </form>
        </div>
    </div>
</div>