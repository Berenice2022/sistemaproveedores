<link rel="stylesheet" type="text/css" href="/css/main.css">
<div class="col-md-4 mx-auto">
    <div class="card borde-success ">
        <div class="card-header titulopedido">
            <h3 class="text-center text-white">Editar Pedido</h3>
        </div>
        <div class="card-body">
            <form action="/pedidos/editar-pedido/{{_id}}?_method=PUT" 
            method="POST">
            <input type="hidden" name="_method" value="PUT">
          <div class="form-group mb-3">
              <select required
                    name="producto"
                    class="form-control" 
                    autofocus="" >
                <option>{{producto}}</option> 
                {{#each arregloproduc}}
                <option>{{nombre}}</option> 
                {{/each}}    
              </select>
            </div>
            <div class="form-group mb-3">
              <select required
                    name="proveedor"
                    class="form-control" 
                    autofocus="" >
                <option>{{proveedor}}</option>
                {{#each arregloprovee}}
                <option>{{nombre}}</option> 
                {{/each}}    
              </select>
            </div>
            <div class="form-group mb-3">
                <input type="number" 
                    name="cantidad_de_piezas"
                    class="form-control" 
                    placeholder="Cantidad de piezas"
                    autofocus="" 
                    value="{{cantidad_de_piezas}}"
                    required>
            </div>
            <div class="form-group d-grid gap-2">
                <button class="btn btn-outline-success" type="submit">
                    Actualizar
                </button>
            </div>
            </form>
        </div>
    </div>
</div>